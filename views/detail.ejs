<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card" style="width: 18rem;">

               <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    Data contact tidak ada <a href="/contact" class="alert-link">kembali ke detail</a>
                </div>
                <% } else { %>
                    <div class="card-body">
                      <h5 class="card-title"><%- contact.nama %></h5>
                      <h6 class="card-subtitle mb-2 text-body-secondary"><%- contact.no_Hp %></h6>
                      <p class="card-text"><%- contact.email %></p>
                      <form action="/contact?_method=DELETE" method="post">
                          <input type="hidden" class="form-control"
                          id="nama"
                          name="nama"
                          value="<%= contact.nama %>" />
                          <button type="submit" class="btn btn-danger badge" onclick="return confirm('Ingin hapus ini?')">Delete</button>
                          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge">Update</a>
                      </form>
                        <br>
                      <a href="/contact" class="card-link">&laquo;Kembali ke daftar contact</a>
                    </div>
                <% } %>
                
                    
               
              </div>
        </div>
    </div>
</div>